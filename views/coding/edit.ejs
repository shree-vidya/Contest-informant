<%- include('../partials/header-form') %>

<div class="container">
	<div class="row form-header">
		<h1>
			Edit <%= event.name %>
		</h1>
	<div style="width: 35%; margin: 25px auto">
		<form action="/coding/<%= event._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="event[name]" value="<%= event.name %>">
        </div>
        <div class="form-group">
			<input class="form-control" type="text" name="event[venue]" value="<%= event.venue %>"">
        </div>
        <div class="form-group">
			<input class="form-control" type="text" name="event[date]" value="<%= event.date %>" >
        </div>
		<div class="form-group">
			<input class="form-control" type="text" name="event[description]" value="<%= event.description %>">
        </div>
        <div class="form-group">
			<input class="form-control" type="url" name="event[registration_link]" value="<%= event.registration_link %>">
		</div>
		<div class="form-group">	
			<button class="btn btn-lg btn-primary btn-block">
				Submit!
			</button>
		</div>	
		</form>
	<h4>	<a style="color: black" href="/coding">Go Back</a> </h4>
	</div>
</div>
	</div>

 <%- include('../partials/footer') %>
